<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Botones -->
    <style name="btn_styles">
        <item name="backgroundTint">@color/background_btn</item>
        <item name="android:textColor">@color/color_btn</item>
    </style>
    <!-- Lista -->

    <!-- Item Tarea -->
        <!-- Titulo -->
    <style name="titulo_tarea" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

        <!-- Fecha -->
    <style name="fecha_tarea" parent="android:Widget.TextView">
        <item name="android:textColor">@color/fecha_tarea</item>
        <item name="android:textSize">8dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Detalles tarea -->
        <!-- Item -->
    <style name="detalles_tarea_item">
        <item name="android:background">@drawable/border_detalles_tarea</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Dialog items tarea -->
    <style name="dialog_tarea_item">
        <item name="android:background">@drawable/border_detalles_tarea</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/radioBorder</item>
    </style>

    <!-- Light EditTexts -->
    <style name="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="itemTextAppearanceActiveBoldEnabled">true</item>
    </style>

    <style name="modifiedEditText">
        <item name="android:height">@dimen/edit_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>

    </style>

    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="errorTextColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>
</resources>